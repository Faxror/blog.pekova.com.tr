@model IEnumerable<BusinessLayer.Concrete.BlogManager.BlogWithAuthors2>
@{
    ViewBag.Title = "GetBlogCategory";
    Layout = "~/Views/Shared/NewLayout.cshtml";

}

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <span>Kategori</span>
                <h3>@ViewBag.categoryname</h3>
               

            </div>
        </div>
    </div>
</div>
<div class="site-section bg-white">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="/Blog/BlogDetails/@item.Blog.BlogID"><img src="@item.Blog.BlogImage" alt="Image" style="height:250px" class="img-fluid rounded"></a>
                        <div class="excerpt">
                            <span class="post-category text-white bg-secondary mb-3">@item.Category.CategoryName</span>
                            <h2><a href="/Blog/BlogDetails/@item.Blog.BlogID">@item.Blog.BlogTıtle</a></h2>
                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="@item.Author.AuthorImage" alt="Image" class="img-fluid"></figure>
                                <span class="d-inline-block mt-1"><a href="#">@item.Author.AuthorName</a></span>
                                <span>&nbsp;-&nbsp; @(((DateTime)item.Blog.BlogTime).ToString("dd-MMM-yyyy"))</span>
                            </div>
                            @{
                                var blogContent = item.Blog.BlogContent.ToString();
                                var shortenedContent = blogContent.Substring(0, Math.Min(blogContent.Length, 200));
                                var truncatedContent = shortenedContent.Substring(0, shortenedContent.LastIndexOf(" ")) + "...";
                            }
                            <p>@Html.Raw(truncatedContent)</p>
                            <p><a href="/Blog/BlogDetails/@item.Blog.BlogID">Devamını oku</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>