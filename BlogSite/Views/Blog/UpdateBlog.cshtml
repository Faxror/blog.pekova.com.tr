@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Blog Güncelleme</h1>


<form class="forms-sample" method="post">
    <div class="form-group">
        @Html.HiddenFor(x => x.BlogID)
        <label for="exampleInputName1">Blog Başlığı</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Başlık Giriniz" asp-for="BlogTıtle">
    </div>
    <div class="form-group">
        @Html.Label("Kategori ")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.s2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Resim Yolu</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Resim Yolu  Giriniz" asp-for="BlogImage">
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Tarih</label>
        <input type="date" class="form-control" id="exampleInputName1" placeholder="Lütfen Tarih Giriniz" asp-for="BlogTime">
    </div>
    <div class="form-group">
        @Html.Label("Yazar Adı")
        @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)ViewBag.a2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleTextarea1">Açıklama</label>
        <textarea class="form-control" id="summernote" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="BlogContent"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
    <button class="btn btn-light">Geri Dön</button>
</form>



<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

<script>
    $('#summernote').summernote({
        placeholder: 'Blog yazınızı girebilirsiniz',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['codeview', 'help']]
        ]
    });
</script>

