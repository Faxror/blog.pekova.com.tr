@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRolList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Roller</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table table-striped">

                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Kullanıcı</th>
                        <th>Rol Atama</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.Id</td>
                            <td>@item.NameAndSunName</td>
                            <td><a class="btn btn-outline-success" href="/Admin/AssingRole/@item.Id">Rol Ata</a></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
       
    </div>

    <a href="/Admin/RolList" class="btn btn-outline-primary">Rol Listesine dön</a>
