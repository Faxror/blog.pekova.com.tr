@model List<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Projects</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                #

                            </th>

                            <th style="width: 20%">

                                Kategory Adı

                            </th>

                         

                            

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model) {
                        <tr>

                            <td>

                                @item.CategoryID
                            </td>

                            <td>

                                <a>

                                   @item.CategoryName

                                </a>

                                <br />

                         

                            </td>

             





                            <td class="project-actions text-right">



                                <a class="btn btn-info btn-sm" href="/Category/Edit/@item.CategoryID">

                                    <i class="fas fa-pencil-alt">

                                    </i>

                                    Düzenle

                                </a>

                                    <a class="btn btn-danger btn-sm" href="/Category/Delete/@item.CategoryID">

                                    <i class="fas fa-trash">

                                    </i>

                                    Sil

                                </a>

                            </td>

                        </tr>
                        }
                    </tbody>
                      
                </table>
               
            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>

<a type="submit" class="btn btn-outline-primary" href="/Category/Add">Yeni Kategory Ekle</a>
