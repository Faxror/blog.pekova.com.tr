@model EntityLayer.Concrete.Author
@{
    ViewData["Title"] = "AddAuthor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="forms-sample" method="post">
    <div class="form-group">
        <label for="exampleInputName1">Yazarın Adı ve Soyadı</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Başlık Giriniz" asp-for="AuthorName">
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Yazarın Resmi</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Resim Yolu Giriniz" asp-for="AuthorImage">
    </div>
    <div class="form-group">
        <label for="exampleInputName1">Mail</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Mail Addreasi  Giriniz" asp-for="Mail">
    </div>

    <div class="form-group">
        <label for="exampleInputName1">Kısa Hakkımda</label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Kısa Hakkımda Giriniz" asp-for="ShortAbout">
    </div>
      <div class="form-group">
        <label for="exampleInputName1">Telefon Numarası </label>
        <input type="text" class="form-control" id="exampleInputName1" placeholder="Lütfen Telefon Numarası Giriniz" asp-for="Phone">
    </div>
    <div class="form-group">
        <label for="exampleTextarea1">Hakkımda</label>
        <textarea class="form-control" id="exampleInputName1" rows="4" placeholder="Lütfen Açıklama Giriniz" asp-for="AuthorAbout"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary">Kaydet</button>
</form>
