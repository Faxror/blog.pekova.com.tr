@model List<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "MyBlogs";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Projects</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects mb-0">
                    <thead>
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 30%">Blog Başlık</th>
                            <th style="width: 20%">Değerlendirme Oranı</th>
                            <th style="width: 20%">Durum</th>
                            <th style="width: 25%">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BlogID</td>
                                <td>@item.BlogTıtle</td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">
                                        </div>
                                    </div>
                                    <small>57% Tamamlandı</small>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-success">Tamamlandı</span>
                                </td>
                                <td class="project-actions">
                                        <a class="btn btn-info btn-sm" href="/User/UpdateWriterBlog/@item.BlogID">
                                        <i class="fas fa-pencil-alt"></i>
                                        Düzenle
                                    </a>
                                        <a class="btn btn-danger btn-sm" href="/User/DeleteWriterBlog/@item.BlogID">
                                        <i class="fas fa-trash"></i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
            <br />
                <a class="btn btn-info" href="/User/AddWriterBlog">Yeni Blog Oluştur</a>
        </div>
        </section>
    
    </div>
        <!-- /.card -->
    
   
    <!-- /.content -->

</body>
</html>
